{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "new-cap": ["error", { "capIsNewExceptions": ["Router"] }],
        "func-call-spacing": ["error", "always"],
        "space-before-function-paren": ["error", "always"],
        "max-len": ["error", { "code": 256 }],
        "object-curly-spacing": ["error", "always"]
    }
}
