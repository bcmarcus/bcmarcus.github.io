{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "predeploy": [
      "rm -rf client/dist && cd client && npm run build && cd .."
    ],
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage/storage.rules",
    "include": [
      "storage/storage.js"
    ]
  }
}
