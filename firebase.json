{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "predeploy": [
      "rm -rf client/dist && cd client && npm run build && cd .."
    ],
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/call",
        "function": "call"
      },
      {
        "source": "/getAudio/:path*",
        "function": "getAudio"
      },
      {
        "source": "/transcribe",
        "function": "transcribe"
      }
    ]
  },
  "storage": {
    "rules": "storage/storage.rules",
    "include": [
      "storage/storage.js"
    ]
  }
}
