{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "predeploy": [
      "rm -rf client/dist && cd client && npm run build && cd .."
    ],
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/date",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      },
      {
        "source": "/answerCall",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      },
      {
        "source": "/getAudio/:path*",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      },
      {
        "source": "/callLoopAccurate",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      },
      {
        "source": "/callLoopFast",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      },
      {
        "source": "/callLoopVeryFast",
        "run": {
          "serviceId": "call-to-action",
          "region": "us-central1"
        }
      }
    ]
  },
  "storage": {
    "rules": "storage/storage.rules",
    "include": [
      "storage/storage.js"
    ]
  }
}
